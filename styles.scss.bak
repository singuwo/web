/* Advanced Checkbox Hack */

/* 
 * pseudo-class + general/adjacent sibling doesn't work
 * on Android <= 4.1.2 so we need a hack:
 *
 * A useless animation :D
 */
body { -webkit-animation: bugfix infinite 1s; }
@-webkit-keyframes bugfix { from {padding:0;} to {padding:0;} }

input[type=checkbox] {
   position: absolute;
   top: -9999px;
   left: -9999px;
}



/* checked */
input[type=checkbox]:checked ~ .primary_nav{
		display:  inline ;
}

#selected,#rootnavsel,.selectedlang {
    color: $sel-color;
    background: $sel-back-color;
}

 


